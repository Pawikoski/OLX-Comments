{
    "name": "OLX Notes",
    "version": "0.0.0.5",
    "manifest_version": 2,
    "content_scripts": [
        {
            "css": [
                "css/bootstrap.min.css",
                "css/fontawesome.min.css",
                "css/regular.min.css",
                "css/comments.css"
            ],
            "matches": ["*://*.olx.pl/d/oferta/*"],
            "js": ["js/jquery-3.6.0.min.js", "js/bootstrap.bundle.min.js", "content.js"]
        }
    ],

    "web_accessible_resources": [
        "css/bootstrap.min.css",
        "css/comments.css",
        "css/fontawesome.min.css",
        "css/regular.min.css",
        "fonts/*"
    ]
}